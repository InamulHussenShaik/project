  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",                    // ðŸ‘ˆ Required
    "paths": {
      "@/*": ["src/*"]                 // ðŸ‘ˆ This is the alias
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
